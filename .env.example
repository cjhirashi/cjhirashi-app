# ================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# ================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ================================================================

# ----------------------------------------------------------------
# DATABASE (Supabase PostgreSQL)
# ----------------------------------------------------------------
# Connection URL for Prisma (uses connection pooler)
DATABASE_URL="postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct connection URL (for migrations)
DIRECT_URL="postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:5432/postgres"

# ----------------------------------------------------------------
# SUPABASE
# ----------------------------------------------------------------
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL="https://xxxxx.supabase.co"

# Supabase anonymous/public key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase service role key (NEVER expose to client)
# Only use this in server-side code
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ----------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------
# URL where your app is deployed (for redirects)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# Secret key for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here-use-openssl-rand-base64-32"

# ----------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------
# Node environment
NODE_ENV="development"  # or "production"

# Application name
NEXT_PUBLIC_APP_NAME="CJ Hirashi Admin Panel"

# ----------------------------------------------------------------
# OPTIONAL: EXTERNAL SERVICES
# ----------------------------------------------------------------

# Email Service (if configured)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="noreply@yourdomain.com"

# Redis (for caching, if configured)
# REDIS_URL="redis://localhost:6379"

# Logging Service (if configured)
# SENTRY_DSN="https://xxxx@xxxx.ingest.sentry.io/xxxx"

# Analytics (if configured)
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ----------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_AUDIT_LOGS="true"
NEXT_PUBLIC_ENABLE_SETTINGS="true"

# ----------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------
# Requests per minute for API routes
RATE_LIMIT_REQUESTS_PER_MINUTE="60"

# ----------------------------------------------------------------
# NOTES
# ----------------------------------------------------------------
# 1. Generate NEXTAUTH_SECRET:
#    openssl rand -base64 32
#
# 2. Get Supabase credentials:
#    - Go to your Supabase project dashboard
#    - Settings > Database > Connection string
#    - Settings > API > Project API keys
#
# 3. Database URLs:
#    - Use CONNECTION POOLING URL for DATABASE_URL
#    - Use DIRECT CONNECTION URL for DIRECT_URL
#
# 4. Security:
#    - Never commit .env.local or .env files
#    - Rotate secrets periodically
#    - Use different secrets for dev/staging/prod
#
# 5. Deployment:
#    - Set these in your hosting platform (Vercel, etc.)
#    - Ensure NEXTAUTH_URL matches your domain
#    - Use strong, unique secrets in production
# ================================================================
